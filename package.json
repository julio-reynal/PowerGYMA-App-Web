{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "engines": {
        "node": "20.19.0",
        "npm": ">=9.0.0"
    },
    "scripts": {
        "build": "vite build && npm run fix-manifest",
        "build-only": "vite build",
        "dev": "vite",
        "production": "vite build && npm run fix-manifest",
        "fix-manifest": "node -e \"const fs = require('fs'); const path = require('path'); const src = 'public/build/.vite/manifest.json'; const dest = 'public/build/manifest.json'; if (fs.existsSync(src)) { fs.renameSync(src, dest); console.log('Manifest moved successfully'); } else { console.log('Manifest file not found or already moved'); }\""
    },
    "dependencies": {
        "@tailwindcss/postcss": "^4.1.13",
        "@tailwindcss/vite": "^4.0.0",
        "autoprefixer": "^10.4.21",
        "axios": "^1.11.0",
        "laravel-vite-plugin": "^1.0.0",
        "tailwindcss": "^4.0.0",
        "terser": "^5.36.0",
        "vite": "^6.0.0"
    },
    "devDependencies": {
        "concurrently": "^9.0.1",
        "vite-plugin-compression": "^0.5.1",
        "vite-plugin-imagemin": "^0.6.1"
    }
}
