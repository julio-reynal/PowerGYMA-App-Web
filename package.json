{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "engines": {
        "node": "20.19.0",
        "npm": ">=9.0.0"
    },
    "scripts": {
        "build": "vite build && npm run fix-manifest",
        "dev": "vite",
        "production": "vite build && npm run fix-manifest",
        "fix-manifest": "powershell -Command \"if (Test-Path 'public/build/.vite/manifest.json') { Move-Item 'public/build/.vite/manifest.json' 'public/build/manifest.json' -Force }\""
    },
    "dependencies": {
        "vite": "^6.0.0",
        "laravel-vite-plugin": "^1.0.0",
        "@tailwindcss/vite": "^4.0.0",
        "tailwindcss": "^4.0.0",
        "axios": "^1.11.0",
        "terser": "^5.36.0"
    },
    "devDependencies": {
        "concurrently": "^9.0.1"
    }
}
